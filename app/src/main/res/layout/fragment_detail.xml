<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>


    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!--Name-->
        <TextView
            android:id="@+id/txtName"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Name"
            android:textSize="@dimen/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Image-->
        <ImageView
            android:id="@+id/imvDetail"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!--amount and unit-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.2"
                android:id="@+id/txtAmountt"
                android:textStyle="bold"
                android:text="จำนวน :"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Amout"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />


            <TextView
                android:layout_weight="3"
                android:id="@+id/txtUnit"
                android:textStyle="bold"
                android:text="Unit"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--date-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1.6"
                android:id="@+id/txtDatee"
                android:textStyle="bold"
                android:text="วันที่การผลิต :"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/txtDate"
                android:textStyle="bold"
                android:text="Date"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <!--Name Shop-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/txtShopp"
                android:textStyle="bold"
                android:text="ร้าน :"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_weight="4"
                android:id="@+id/txtShop"
                android:textStyle="bold"
                android:text="Name Shop"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Address-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/txtAddresss"
                android:textStyle="bold"
                android:text="ที่ตั้ง :"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="4"
                android:id="@+id/txtAddress"
                android:textStyle="bold"
                android:text="Address"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!--phone-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/txtPhonee"
                android:textStyle="bold"
                android:text="เบอร์โทร :"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/txtPhone"
                android:textStyle="bold"
                android:text="Phone"
                android:textSize="@dimen/h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>